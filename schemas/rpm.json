{
    "$schema": "http://json-schema.org/schema",

    "definitions": {
        "Package": {
            "description": "A RPM package.",
            "type": "object",
            "properties": {
                "id": { 
                    "type": "string",
                    "description": "Identifier of package."
                },
                "name": { 
                    "type": "string",
                    "description": "Readable name of package."
                },
                "description": { 
                    "type": "string",
                    "description": "Descriptive information about the package."
                },
                "action": {
                    "type": "string",
                    "enum": [ "install", "update", "remove" ],
                    "description": "Action to take on package.",
                    "default": "install"
                }
            },
            "required": [ "id" ]
        }
    },

    "type": "array",
    "description": "RPM packages in profile.",
    "items": {
        "$ref": "#/definitions/Package"
    }
}